<%= render 'shared/errors',obj:@user%>
<div class=" border p-5 bg-info bg-gradient text-white">
    <%= form_with(model: @user, local: true) do |f| %>
        <div class="f">
            <div class="form-group row">
                <%= f.label :UserName,class:"col-2 col-form-label"%>
                <%= f.text_field :username,class:"col-10 form-control",placeholder:"Enter User Name"%>
            </div>
            <div class="form-group row">
                <%= f.label :Email,class:"col-2 col-form-label"%>
                <%= f.text_field :email,class:"col-10 form-control",placeholder:"Enter Email"%>
            </div>
            <div class="form-group row">
                <%= f.label :Password,class:"col-2 col-form-label"%>
                <%= f.password_field :password,class:"col-10 form-control",placeholder:"Enter password"%>
            </div>
            <div class="text-center"><%= f.submit "Sign Up", class:"btn btn-success mt-2 "%></div>

        </div>
    <%end%>
</div>