<h1 class="text-center">Showing Details</h1>


<div class="container">
<div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @article.title %></h5>
    <p class="card-text"><%= simple_format(@article.description) %></p>
    <a><%= link_to 'Edit',edit_article_path(@article),class:"btn btn-warning "%></a>
    <a><%= link_to'Delete',article_path(), method: :delete,  data: {confirm: 'Are you sure?'},class:"btn btn-danger" %></a>
  </div>
</div>
<%=link_to 'Go to index',articles_path,class:"btn btn-primary mt-3"%>
</div>


