<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>


<div class="text-center"><h1>Login</h1></div>


<div class="d-flex justify-content-center">
<div class=" border p-5 bg-info bg-gradient text-white w-50 ">
    <%= form_with(scope: :session, url:login_path,local: true) do |f| %>
        <div class="f">
            <div class="form-group row">
                <%= f.label :Email,class:"col-2 col-form-label"%>
                <%= f.text_field :email,class:"col-10 form-control",placeholder:"Enter Email"%>
            </div>
            <div class="form-group row">
                <%= f.label :Password,class:"col-2 col-form-label"%>
                <%= f.password_field :password,class:"col-10 form-control",placeholder:"Enter password"%>
            </div>
            <div class="text-center"><%= f.submit "Login", class:"btn btn-success mt-2 "%></div>

        </div>
    <%end%>
</div>
